<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <com.example.final_535_app.view.RectangleView
            android:id="@+id/rv_search_banner"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_vip_header_bg"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_fg_my_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:ellipsize="end"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_chart_video_openInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/video"/>
            <TextView
                android:id="@+id/tv_fg_myvideo_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:text="23"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/dankamu"/>
            <TextView
                android:id="@+id/tv_fg_myvideo_dakamu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/thumb_up"/>
            <TextView
                android:id="@+id/tv_fg_thumv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:text="23"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/share"/>
            <TextView
                android:id="@+id/tv_fg_myvideo_share"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:text="23"
                android:gravity="center_vertical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/collection_fill"/>
            <TextView
                android:id="@+id/tv_fg_myvideo_favorite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:text="23"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical|end">

        <Button
            android:layout_width="60dp"
            android:background="@drawable/my_draft_manger_btn_style"
            android:layout_height="30dp"
            android:text="分享"/>
        <Button
            android:id="@+id/item_fg_btn_datacenter"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/my_draft_manger_btn_style"
            android:text="数据"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/my_draft_manger_btn_style"
            android:text="编辑"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/my_draft_manger_btn_style"
            android:text="更多"/>

    </LinearLayout>

</LinearLayout>